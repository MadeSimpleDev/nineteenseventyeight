<p style="color: green"><%= notice %></p>

<% content_for :title, "Records" %>

<div id="records">
<% if authenticated? %>
<div>
  <%= link_to "Add new record", new_record_path %>
</div>
<% end %>  
  <% @records.each do |record| %>
    <% if authenticated? %>
      <%= link_to "Edit this record", record %>
    <% end %>
    <%= render record %>
  <% end %>
</div>